---
const { data } = Astro.props;
---

<article class="relative px-10 pb-12 pt-24">
  <div class="absolute inset-0 bg-primary-green rounded-lg -z-10"></div>
  <span class="absolute left-0 top-0 bottom-0 -rotate-90 font-bold uppercase"
    >{data.textEfect}</span
  >
  <img class="w-full h-auto" src="../../public/info/Handshake.webp" />
  <div class="relative">
    <h4 class="uppercase font-semibold text-3xl tracking-tight max-w-[320px]">
      {data.title}
    </h4>
    <p class="absolute opacity-0 text-lg">
      <strong>{data.paragraphStrong}</strong>{data.paragraph}
    </p>
  </div>
</article>
